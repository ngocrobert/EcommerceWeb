@model WebBanHangOnline.Models.ForgotPasswordViewModel

@{
	ViewData["Title"] = "ForgotPassword";
	Layout = "~/Views/Shared/_LayoutForgotPass.cshtml";
}

<div class="card-body login-card-body">
	<p class="login-box-msg">You forgot your password? Here you can easily retrieve a new password.</p>

	@using (Html.BeginForm("forgotPassword","account", FormMethod.Post))
	{
		@*<form action="recover-password.html" method="post">*@
			@Html.ValidationSummary(false)
		@Html.AntiForgeryToken()
		<div class="input-group mb-3">
			@*<input type="email" class="form-control" placeholder="Email">*@
			 @Html.TextBoxFor(x=>x.Email, new {@class = "form-control", @type="email" ,@placeholder="Email"})
			<div class="input-group-append">
				<div class="input-group-text">
					<span class="fas fa-envelope"></span>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-12">
				<button type="submit" class="btn btn-primary btn-block">Request new password</button>
			</div>
			<!-- /.col -->
		</div>
	@*</form>*@
	}
	
	<p class="mt-3 mb-1">
		<a href="/account/login">Login</a>
	</p>
	<p class="mb-0">
		<a href="/account/register" class="text-center">Register a new membership</a>
	</p>
</div>


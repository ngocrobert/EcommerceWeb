@model WebBanHangOnline.Models.EF.Order
@using X.PagedList.Mvc.Core;

@{
	ViewData["Title"] = "Chi tiết đơn hàng";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section naviheader{
	<ul class="navbar-nav">
		<li class="nav-item">
			<a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
		</li>
		<li class="nav-item d-none d-sm-inline-block">
			<a href="/admin" class="nav-link">Home</a>
		</li>
		<li class="nav-item d-none d-sm-inline-block">
			<a href="#" class="nav-link">Chi tiết đơn hàng</a>
		</li>
	</ul>
}

	<!-- Main content -->
	<section class="content">

		<!-- Default box -->
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Chi tiết đơn hàng</h3>


			</div>
			<div class="card-body">
				<div class="row">
					<div class="col-md-6">
						<div class="form-group">
							<label>Mã đơn hàng</label>
							<p class="form-control">@Model.Code</p>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label>Họ tên khách hàng</label>
							<p class="form-control">@Model.CustomerName</p>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6">
						<div class="form-group">
							<label>Tổng tiền</label>
							<p class="form-control">@WebBanHangOnline.Common.Common.FormatNumber(Model.TotalAmount,0) đ</p>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label>Số điện thoại</label>
							<p class="form-control">@Model.Phone</p>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6">
						<div class="form-group">
							<label>Ngày tạo</label>
							<p class="form-control">@Model.CreatedDate.ToString("dd/MM/yyyy")</p>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<label>Email</label>
							<p class="form-control">@Model.Email</p>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6">
						<div class="form-group">
							<label>Trạng thái</label>
							<p class="form-control">@(Model.TypePayment == 0 ? "Chưa thanh toán" : "Đã thanh toán")</p>
						</div>
					</div>
					<div class="col-md-6">
					</div>
				</div>
				<div class="row">
					<div class="col-12">
						<h2>Danh sách sản phẩm</h2>
					</div>
					<div class="col-12">
						<table class="table table-bordered">
							<thead>
								<tr>
									<th>#</th>
									<th>Tên sản phẩm</th>
									<th>Gía</th>
									<th>Số lượng</th>
									<th>Thành tiền</th>
								</tr>
							</thead>
							<tbody>
								@if (Model != null)
							{
								var i = 0;
								@foreach (var item in Model.OrderDetails)
								{
									<tr>
										<td>@(i+1)</td>
										<td>@item.Product.Title</td>
										<td>@item.Price</td>
										<td>@item.Quantity</td>
										<td>@WebBanHangOnline.Common.Common.FormatNumber((item.Price * item.Quantity), 0)</td>
									</tr>
									i++;
								}
							}

						</tbody>
					</table>
					@*@Html.Partial("Partial_SanPham", Model.OrderDetails)*@
					@*@await Component.InvokeAsync("Partial_SanPham", new {id = Model.Id});*@
				</div>
			</div>
		</div>
	</div>
	<!-- /.card-body -->
	<div class="card-footer">
		Footer
	</div>
	<!-- /.card-footer-->
	</div>
	<!-- /.card -->

</section>
